{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "endOfLine": "lf",
  "semi": true,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "prettier-plugin-css-order",
    "prettier-plugin-astro",
    "prettier-plugin-svelte"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-css-order"],
        "parser": "astro"
      }
    },
    {
      "files": "*.svelte",
      "options": {
        "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-css-order"],
        "parser": "svelte"
      }
    }
  ]
}
